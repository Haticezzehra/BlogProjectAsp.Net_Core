@using EntityLayer.Concrete
@model List<Message2>
@{
    ViewData["Title"] = "InBox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>InBox</h1>
<h1>Yazarın Blogları</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Subject</th>
        <th>Gönderen</th>
        <th>Tarih</th>
        <th>Mesajı Aç</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.MessageID</th>
            <td>@item.Subject</td>
            <td>@item.SenderUser.WriterName</td>
            <td>
                @(((DateTime)item.MessageDate).
                    ToString("dd-MMM-yyyy"))
            </td>

            <th><a href="/MessageController1/MessageDetails/@item.MessageID" class="btn btn-warning">Mesajı Aç</th>

        </tr>
    }
</table>
<a href="/BlogControllers/BlogAdd/" class="btn btn-gradient-info">Create New Blog</a>

