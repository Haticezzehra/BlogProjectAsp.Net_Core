@using EntityLayer.Concrete
@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Yazarın Blogları</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Blog Başlığı</th>
        <th>Oluşturma Tarihi</th>
        <th>Kategori</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.BlogID</th>
            <th>@item.BlogTitle</th>
            <th>
                @(((DateTime)item.BlogCreateDate).
                    ToString("dd-MMM-yyyy"))
            </th>
            <th>@item.Category.CategoryName </th>
            <th>@item.BlogStatus</th>
            <th><a href="#" class="btn btn-danger">Sil</th>
            <th><a href="#" class="btn btn-warning">Düzenle</th>

        </tr>
    }
</table>
<a href="#" class="btn btn-gradient-info">Create New Blog</a> 
