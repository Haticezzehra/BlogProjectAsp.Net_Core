@using Core_Demo.Models;
@model UserUpdateViewModel
@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}




<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Writer Edit Profile</h4>
            <br />

            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Writer Name Surname</label>
                    <input type="text" asp-for="@Model.namesurname" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">User Name</label>
                    <input type="text" asp-for="@Model.username" class="form-control" />

                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Email address</label>
                    <input type="text" asp-for="@Model.email" class="form-control" />

                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Image Url</label>
                    <input type="text" asp-for="@Model.imageurl" class="form-control" />

                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">New Password</label>
                    <input type="text" asp-for="@Model.password" class="form-control" />

                </div>

                <div class="form-group">
                    <label>Writer Image</label>
                </div>
               
                <button type="submit" class="btn btn-gradient-primary mr-2">Update</button>
                <button class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>
